{% extends 'base.html.twig' %}

{% block title %}Book{% endblock %}

{% block body %}
    <div style="margin-top:150px">
        <h1>Book</h1>

        <table class="table">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ book.id }}</td>
                </tr>
                <tr>
                    <th>Isbn</th>
                    <td>{{ book.isbn }}</td>
                </tr>
                <tr>
                    <th>Author</th>
                    <td>{{ book.author }}</td>
                </tr>
                <tr>
                    <th>Title</th>
                    <td>{{ book.title }}</td>
                </tr>
                <tr>
                    <th>Price</th>
                    <td>{{ book.price }}</td>
                </tr>
            </tbody>
        </table>

        <a href="{{ path('book_edit', {'id': book.id}) }}">edit</a><br>

        <a href="{{ path('book_index') }}">back to list</a>

        {{ include('book/_delete_form.html.twig') }}

        {% for review in book.reviews %}
            <h5>Reviews</h5>
            <p class="card-text">{{ review.name }}</p>
            <p class="card-text">{{ review.description }}</p>
        {% endfor %}
    </div>
{% endblock %}
