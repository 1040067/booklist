{% extends 'base.html.twig' %}

{% block title %}Review{% endblock %}

{% block body %}
    <div style="margin-top:150px">
        <h1>Review</h1>

        <table class="table">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ review.id }}</td>
                </tr>
                <tr>
                    <th>Description</th>
                    <td>{{ review.description }}</td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td>{{ review.name }}</td>
                </tr>
            </tbody>
        </table>

        <a href="{{ path('review_edit', {'id': review.id}) }}">edit</a><br>

        <a href="{{ path('review_index') }}">back to list</a>

        {{ include('review/_delete_form.html.twig') }}
    </div>
{% endblock %}
